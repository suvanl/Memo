<local:BasePage x:TypeArguments="core:RegisterViewModel" x:Class="Memo.RegisterPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Memo"
      xmlns:core="clr-namespace:Memo.Core;assembly=Memo.Core"
      mc:Ignorable="d"
      x:Name="Page"
      d:DesignHeight="700" d:DesignWidth="700"
      >

    <Border>
        <Grid>

            <!-- Main content scroll -->
            <ScrollViewer VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Auto">
                <StackPanel 
                    VerticalAlignment="Center"
                    HorizontalAlignment="Center"
                    TextBlock.TextAlignment="Center">

                    <!-- Login main content white box -->
                    <Border Background="{StaticResource ForegroundLightBrush}" 
                            CornerRadius="10"
                            Padding="15 50 15 15"
                            Width="330"
                            Margin="50 50 50 0">

                        <StackPanel>

                            <!-- "Sign Up" header -->
                            <TextBlock Text="Sign Up"
                                   FontSize="{StaticResource FontSizeXXLarge}" 
                                   FontFamily="{StaticResource MontserratRegular}"
                                   Foreground="{StaticResource MemoBlueBrush}" />

                            <!-- "Sign up" subtext-->
                            <TextBlock Text="Welcome to Memo" 
                                       FontSize="{StaticResource FontSizeLarge}"
                                       Foreground="{StaticResource ForegroundDarkBrush}"
                                       Margin="0 0 0 20"
                                       />

                            <!-- Email -->
                            <TextBox Text="{Binding Email}" 
                                     Tag="Email"
                                     local:IsFocusedProperty.Value="True"
                                     />

                            <!-- Password -->
                            <PasswordBox x:Name="PasswordText" Tag="Password" Margin="0 0 0 30" />

                            <!-- Register button -->
                            <Button Content="Register"
                                    IsDefault="True"
                                    local:IsBusyProperty.Value="{Binding RegisterIsRunning}"
                                    Command="{Binding RegisterCommand}" 
                                    CommandParameter="{Binding ElementName=Page}"
                                    HorizontalAlignment="Center" />

                        </StackPanel>

                    </Border>

                    <Button Style="{StaticResource TextButton}" 
                            Content="I already have an account..."
                            HorizontalAlignment="Center" 
                            Command="{Binding LoginCommand}"
                            />

                </StackPanel>
            </ScrollViewer>
        </Grid>
    </Border>
</local:BasePage>